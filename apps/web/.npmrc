# OpenNext-specific pnpm configuration
# Enable symlinks for proper TypeScript resolution
symlink=true
node-linker=hoisted

# Ensure all dependencies are properly linked for TypeScript
prefer-workspace-packages=false
link-workspace-packages=false

# Hoist common build tools for better resolution
hoist-pattern[]=*@opennextjs*
hoist-pattern[]=*sharp*
hoist-pattern[]=*next*
public-hoist-pattern[]=*@opennextjs*