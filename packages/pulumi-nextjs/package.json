{
  "name": "@giweb/pulumi-nextjs",
  "version": "0.1.3",
  "description": "Pulumi component for deploying Next.js applications to AWS using OpenNext",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "pulumi",
    "nextjs",
    "next.js",
    "aws",
    "serverless",
    "opennext",
    "cloudfront",
    "lambda",
    "infrastructure-as-code"
  ],
  "author": "geraudi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geraudi/pulumi-nextjs.git",
    "directory": "packages/pulumi-nextjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@pulumi/aws": "^7.0.0",
    "@pulumi/pulumi": "^3.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "glob": "^13.0.0",
    "mime": "^4.1.0"
  },
  "devDependencies": {
    "@pulumi/aws": "^7.15.0",
    "@pulumi/pulumi": "^3.213.0",
    "@types/archiver": "^6.0.3",
    "@types/glob": "^9.0.0",
    "@types/mime": "^4.0.0",
    "@types/node": "^25.0.3",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  }
}
