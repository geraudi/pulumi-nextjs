{
  "name": "nextjs-pulumi-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "openbuild": "turbo openbuild --filter=@monorepo/web",
    "verify": "turbo verify --filter=@monorepo/web",
    "deploy:aws": "turbo verify --filter=@monorepo/web && turbo deploy --filter=@monorepo/pulumi",
    "deploy:preview": "turbo verify --filter=@monorepo/web && turbo preview --filter=@monorepo/pulumi",
    "destroy": "turbo destroy --filter=@monorepo/pulumi"
  },
  "devDependencies": {
    "turbo": "^2.6.0"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=18"
  }
}
